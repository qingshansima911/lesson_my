.page-section-spacing{
  background: rgba(0,0,0,0.3);
  width: 100%;
  color: #fff;
  box-shadow: 0 0.01rem 0.18rem rgba(0,0,0,0.6);
}
.scroll-view-item_H{
  display: inline-block;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 10pt; /* 字体用pt */
}
.scroll-view_H{
  white-space: nowrap; /* 空白符不换行 */
}
.navItem{
  padding: 0 10px;
  width: 100%;
  height: 100%;
  display: block;
  text-align: center;
}
/* 英雄列表 */
.heroList{
  width: 100%;
}
.hItem{
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  width: 45%;
  height: 180pt;
  background: transparent;
  /* display: inline-block; */
}
.hItem:nth-child(2n){
  float: right;
}
.hItem:nth-child(2n-1){
  float: left;
}
.hItemimg{
  width: 100%;
  height: 100%;
}