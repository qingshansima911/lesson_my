<view class="container">
    <!-- 地图组件 -->
    <map 
        id="myMap"
        class="map" 
        latitude="{{latitude}}"
        longitude="{{longitude}}"
        scale="16"
        show-location="true"
        markers="{{markers}}"
    >
        <cover-view class="top-tips">
            <cover-image class="top-icon" src="/images/map-bicycle.png"></cover-image>
            <cover-view class="top-text">青桔单车</cover-view>
        </cover-view>
        <cover-image
            src="/images/reset.png"
            class="map-icon map-icon_reset"
            bindtap="toReset"
        >
        </cover-image>
    </map>

</view>