<%- include('header',{ type: 'signup' })%>
    <div class="container">
        <!-- ajax 去提交 -->
        <form class="form create">
            <label for="">用户名</label>
            <input type="text" name="name" placeholder="请输入用户名">
            <label for="">密码</label>
            <input type="password" name="password" placeholder="请输入密码">
            <label for="">重复密码</label>
            <input type="password" name="repeatpass" placeholder="请确认密码">
            <label for="">上传头像：</label>
            <input type="file" name="avatar" id="avatar">
            <input type="hidden" id="avatarVal">
            <img class="preview" alt="预览头像">
            <div class="submit">注册</div>
        </form>
    </div>
    <script>
        $(window).keyup(function (e) {
            if (e.keyCode === 13) {
                $('.submit').click()
            }
        })
        $('#avatar').change(function () {
            if (this.files.length != 0) {
                const file = this.files[0]
                // console.log(file,'//////');
                reader = new FileReader()
                if (!reader) {
                    this.value = ''
                    return
                }
                // 不超过512kb 
                if (this.size >= 1024 * 1024 / 2) {
                    alert('请上传小于512kb的图片！')
                    return
                }
                if (!/image/g.test(file.type)) {
                    alert('请上传图片！')
                    $('#avatarVal').val('')
                    $('form .preview').attr('src', '')
                    $('form .preview').fadeOut()
                    return
                }
                reader.onload = function (e) {
                    // console.log(e);
                    // console.log(e.target.result,'???');
                    this.value = ''
                    $('form .preview').attr('src', e.target.result)
                    $('form .preview').fadeIn()
                    var image = new Image()
                    image.onload = function () {
                        const canvas = document.createElement('canvas')
                        const ctx = canvas.getContext('2d')
                        canvas.width = 100
                        canvas.height = 100
                        ctx.clearRect(0, 0, 100, 100) // 清空
                        ctx.drawImage(image, 0, 0, 100, 100) // 画上去
                        const blob = canvas.toDataURL('image/png') // base64 url
                        $('#avatarVal').val(blob)
                    }
                    image.src = e.target.result
                }
                reader.readAsDataURL(file)
            }
        })

        $('.submit')
            .click(function () {
                // ajax 提交表单
                if ($('input[name=name]').val().trim() == '') {
                    alert('请输入用户名')
                    return
                }
                if ($('input[name=password]').val().trim() == '') {
                    alert('请输入密码')
                    return
                }
                if ($('input[name=repeatpass]').val() != $('input[name=password]').val()) {
                    alert('请确认密码')
                    return
                }
                $.ajax({
                    url: '/signup',
                    data: {
                        name: $('input[name=name]').val(),
                        password: $('input[name=password]').val(),
                        repeatpass: $('input[name=repeatpass]').val(),
                        avatar: $('#avatarVal').val(),
                    },
                    type: 'POST',
                    cache: false,
                    dataType: 'json',
                    success: function (msg) {

                    }
                })
            })
    </script>
    <%- include('footer')%>